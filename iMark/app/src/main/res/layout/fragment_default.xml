<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.gaurav.agendax.Default">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="HELLO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dispName"
            android:textSize="40sp"
            android:textAlignment="center"
            android:maxWidth="500dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/disp_cgpa"
            android:textSize="30sp"
            android:layout_below="@+id/dispName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="ADD Course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_course"
            android:layout_below="@+id/disp_cgpa"
            android:layout_alignStart="@+id/course_list" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/course_list"
            android:layout_below="@+id/add_course"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</FrameLayout>
