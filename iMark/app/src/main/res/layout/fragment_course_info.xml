<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseInfo">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/disCourseName"
            android:textSize="36sp"

            android:layout_toStartOf="@+id/addNewEntry"
            android:layout_alignEnd="@+id/back2" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/disCourseMark"
            android:textSize="30sp"
            android:layout_below="@+id/disCourseName"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Add Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addNewEntry"
            android:layout_below="@+id/disCourseMark"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:text="CR/NCR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/creditBox"
            android:layout_below="@+id/disCourseMark"
            android:layout_alignStart="@+id/back2"
            android:layout_alignBottom="@+id/addNewEntry" />

        <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteCourse"
            android:layout_below="@+id/disCourseMark"
            android:layout_alignParentStart="true" />

        <ListView
            android:id="@+id/marksList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/addNewEntry" />

    </RelativeLayout>

</FrameLayout>
